<%= link_to ' << Back', root_path %>

<div class="row">
  <div class="col-sm-4">
    <%= image_tag @article.avatar.url(:thumb), :class => "thumbnail" %>
  </div>
  <div class="col-sm-8">
    <div class="pull-right">
      <%if @article.hasExpiryDate %>
        <%= is_past_expire_time @article.expire_time %> 
      <% end %>  
    </div>
    <h3><%= is_past_discount @article.hasExpiryDate, @article.expire_time, @article.discount %>&nbsp;&nbsp; <span class="text-primary"><%= @article.title %></span></h3>
    
  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-12">
  <% if @article.brand.present? %>
    <strong>Brand:</strong><%= @article.brand %>&nbsp;&nbsp;
  <% end %>  
  <strong>Store:</strong><%= link_to @article.store, "#{@article.link}", :target => "_blank" %>
<br>
 <% if @tags.present? %> 
   <%= fa_icon "lg tags", text: ":" %> <% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
      <span class="label label-success"><%= link_to "# #{tag.name}", tag_path(tag), :class => css_class %></span>
    <% end %>
  <% end %>
</div>


<div class="row">
  <div class="col-sm-12">

    <div class="well">
      <%= raw @article.content %>
      <br>
      <div class="pull-right">
        post @<%= @article.updated_at.to_s(:short)%> 
      </div>

    </div>
  </div>
</div>

<hr>
