

<%= form_for @calculator, :html => { :class => "form-horizontal", :role => "form" } do |f| %>
  <% if @calculator.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@calculator.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @calculator.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Origin",  :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%#= f.cktext_area :title, :ckeditor => {:toolbar => 'mini'} %>
      <%= f.text_field :origin, :class => "form-control", :placeholder => "From" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Destination", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :destination, :class => "form-control", :placeholder => "To" %>
    </div>  
  </div>
  

  <div class="form-group">
    <%= f.label "Weight", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :weight, :class => "form-control", :placeholder => "lbs" %>
    </div> 
  </div>
  
  <div class="form-group">
    <%= f.label "Length", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :length, :class => "form-control", :placeholder => "ft"%>
    </div>   
  </div>


  <div class="form-group">
    <%= f.label "Width", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :width, :class => "form-control", :placeholder => "ft" %>
    </div>   
  </div>

  <div class="form-group">
    <%= f.label "Height", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :height, :class => "form-control", :placeholder => "ft" %>
    </div> 
    
  </div>

  <br>
  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-primary btn-lg col-sm-6 col-sm-offset-3" %>
  </div>
<% end %>
