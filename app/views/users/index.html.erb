<h1>Listing users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>email</th>

      <%if current_user.try(:admin?) %>
        <th>last logged in time</th>
        <th></th>
        <th></th>
        <th> Remove</th>
      <% end %>
   
      
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
       
        <td><%= user.name %></td>
        <td><%= user.email %></td>
       
        <% if current_user.try(:admin?)  %>
          <td><%= user.last_sign_in_at.to_s(:short) %></td>
          <td><%#= link_to 'Show', user %></td>
          <td><%#= link_to 'Edit', edit_user_path(user) %></td>
          <td>
            <% if !(current_user == user)   %>
              <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

